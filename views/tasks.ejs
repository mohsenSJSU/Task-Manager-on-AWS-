<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks - Task Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">ðŸ“‹ Task Manager</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <%= user.email %>
                    <% if (user.isAdmin) { %>
                        <span class="badge bg-warning text-dark">Admin</span>
                    <% } else { %>
                        <span class="badge bg-secondary">User</span>
                    <% } %>
                </span>
                <a class="btn btn-outline-light btn-sm" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Create Task Form -->
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Create New Task</h5>
            </div>
            <div class="card-body">
                <form action="/tasks" method="POST">
                    <div class="row">
                        <div class="col-md-4">
                            <input type="text" name="title" class="form-control" placeholder="Task title" required>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="description" class="form-control" placeholder="Description (optional)">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success w-100">Add Task</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tasks List -->
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <% if (user.isAdmin) { %>
                        All Tasks (Admin View)
                    <% } else { %>
                        My Tasks
                    <% } %>
                </h5>
            </div>
            <div class="card-body">
                <% if (tasks.length === 0) { %>
                    <p class="text-muted text-center">No tasks yet. Create one above!</p>
                <% } else { %>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <% if (user.isAdmin) { %>
                                    <th>Owner</th>
                                <% } %>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tasks.forEach(task => { %>
                                <tr>
                                    <td><strong><%= task.title %></strong></td>
                                    <td><%= task.description || '-' %></td>
                                    <td>
                                        <% if (task.status === 'completed') { %>
                                            <span class="badge bg-success">Completed</span>
                                        <% } else if (task.status === 'in-progress') { %>
                                            <span class="badge bg-warning text-dark">In Progress</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Pending</span>
                                        <% } %>
                                    </td>
                                    <% if (user.isAdmin) { %>
                                        <td><small><%= task.userId.substring(0, 8) %>...</small></td>
                                    <% } %>
                                    <td><small><%= new Date(task.createdAt).toLocaleDateString() %></small></td>
                                    <td>
                                        <form action="/tasks/<%= task.taskId %>/status" method="POST" class="d-inline">
                                            <input type="hidden" name="userId" value="<%= task.userId %>">
                                            <select name="status" onchange="this.form.submit()" class="form-select form-select-sm d-inline w-auto">
                                                <option value="pending" <%= task.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                <option value="in-progress" <%= task.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                                                <option value="completed" <%= task.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                            </select>
                                        </form>
                                        <form action="/tasks/<%= task.taskId %>/delete" method="POST" class="d-inline">
                                            <input type="hidden" name="userId" value="<%= task.userId %>">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this task?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>